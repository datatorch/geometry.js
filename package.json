{
  "name": "@datatorch/geometry",
  "version": "0.0.4",
  "description": "Geometry libary for JavaScript",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/datatorch/geometry.js.git",
  "author": "jsbroks <jsbroks@gmail.com>",
  "license": "MIT",
  "scripts": {
    "update": "yarn upgrade-interactive --latest",
    "build": "tsc",
    "test": "jest",
    "doc:generate": "rm -rf docs && typedoc",
    "release": "rm -rf dist && yarn build && standard-version",
    "release:push": "git push --follow-tags origin master && npm publish",
    "release:publish": "yarn publish --non-interactive"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "^.+\\.spec\\.ts$"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "standard-version": "^8.0.0",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.7",
    "typedoc-plugin-markdown": "^2.3.1",
    "typescript": "^3.9.5"
  }
}
